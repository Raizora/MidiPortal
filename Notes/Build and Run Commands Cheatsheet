# Clean the build directory
rm -rf build

# Create build directory
mkdir build

# Change to build directory
cd build

# Configure CMake in Debug mode
cmake -DCMAKE_BUILD_TYPE=Debug ..

# Configure CMake in Release mode
cmake -DCMAKE_BUILD_TYPE=Release ..

# Build using all available CPU cores
cmake --build . -j

# Build specifically in Debug configuration
cmake --build . --config Debug

# Build specifically in Release configuration
cmake --build . --config Release

# Full clean rebuild in Debug mode
rm -rf build && mkdir build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && cmake --build . -j

# Full clean rebuild in Release mode
rm -rf build && mkdir build && cd build && cmake -DCMAKE_BUILD_TYPE=Release .. && cmake --build . -j

# Quick rebuild (without cleaning)
cd build && cmake --build . -j

# Run Debug build
standalone/Debug/MidiPortal

# Run Release build
standalone/Release/MidiPortal